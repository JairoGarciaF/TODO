<%- include('header.ejs') %>

    <main class="h-full flex justify-center items-center">

        <div
            class="flex flex-col justify-between lg:w-1/2 xl:w-5/12 w-3/4 h-5/6 p-4 bg-white border border-gray-200 rounded-lg shadow sm:p-6 dark:bg-gray-800 dark:border-gray-700">
            <h1 class="mb-3 text-2xl text-center font-semibold text-gray-900 md:text-3xl dark:text-white">
                <%- date %>
            </h1>
            <ul class="my-4 space-y-3 h-full overflow-auto">
                <% for( let i=0; i < list.length; i++ ) { %>
                    <li>
                        <div
                            class="flex items-center p-3 text-base font-bold text-gray-900 rounded-lg bg-gray-50 group hover:shadow dark:bg-gray-600 dark:text-white">
                            <input id="check" type="checkbox" value=""
                                class="w-4 h-4 text-gray-900 border border-gray-300 rounded bg-gray-50 focus:ring-0 dark:bg-gray-700 dark:border-gray-600  dark:ring-offset-gray-800 dark:focus:ring-offset-gray-800">
                            <span class=" ml-3 whitespace-nowrap decoration-gray-800 decoration-2">
                                <%- list[i] %>
                            </span>

                        </div>
                    </li>
                    <% } %>



            </ul>
            <form action="/<%-type  %>" method="POST">
                <div class="relative z-0 w-full group flex items-center justify-between">

                    <input type="text" name="task" id="task"
                        class="block py-2.5 px-0 w-3/4 text-md text-gray-900 bg-transparent border-0 border-b-2 border-gray-300 appearance-none dark:text-white dark:border-gray-600 dark:focus:border-slate-100 focus:outline-none focus:ring-0 focus:border-blue-600 peer"
                        placeholder=" " />
                    <label for="task"
                        class="peer-focus:font-medium absolute text-md text-gray-500 dark:text-gray-400 duration-300 transform -translate-y-6 scale-75 top-3 -z-10 origin-[0] peer-focus:left-0 peer-focus:text-blue-600 peer-focus:dark:text-slate-100 peer-placeholder-shown:scale-100 peer-placeholder-shown:translate-y-0 peer-focus:scale-75 peer-focus:-translate-y-6">New
                        Task</label>
                    <button type="submit"
                        class="w-min inline-flex border-2 rounded-full p-3 hover:bg-gray-600 border-slate-100">
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5"
                            stroke="currentColor" class="md:w-7 md:h-7 w-5 h-4 text-slate-100">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M12 4.5v15m7.5-7.5h-15" />
                        </svg>

                    </button>

                </div>
            </form>
        </div>


    </main>
    <%- include('footer.ejs') %>